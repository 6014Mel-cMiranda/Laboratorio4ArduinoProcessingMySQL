#include "DHT.h"
#define DHTPIN 2
#define DHTTYPE DHT11

DHT dht(DHTPIN, DHTTYPE);

void setup() {
  Serial.begin (9600);
  Serial.println("DHTxx Inicio!");

  dht.begin();
}

void loop() {
  delay(2000);
  float h = dht.readHumidity();
  float t = dht.readTemperature ();
  float f = dht.readTemperature(true);
  float hif = dht.computeHeatIndex (f, h);
  float hic = dht.computeHeatIndex (t, h, false);
  if (isnan(h) || isnan(t) || isnan(f)) {
    Serial.println("Fallo de conexi√≥n con el sensor!");
    return;
  }
//Control de Salidas 
  Serial.print ("Humedad:  ");
  Serial.print(h);
  Serial.print("%\t");
  Serial.print("Temperatura:  ");
  Serial.print(t);
  Serial.print("  *C  ");
  Serial.print(f);
  Serial.print(" *F\t");
  Serial.print("Con.:  ");
  Serial.print(hic);
  Serial.print("  *C  ");
  Serial.print(hif);
  Serial.println("  *F ");
  }
